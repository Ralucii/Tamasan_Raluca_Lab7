<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamasan_Raluca_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="gym_logo.png"
                SemanticProperties.Description="shopping_bag"
                HeightRequest="300"
                HorizontalOptions="Center" />
            <Label FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" Text="Searching for fitness classes has never been easier! Organise your classes using this app." VerticalOptions="End" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
