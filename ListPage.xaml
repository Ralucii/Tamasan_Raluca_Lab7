<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamasan_Raluca_Lab7.ListPage"
             Title="Make your Classes List">
    <ContentPage.Content xmlns:local="clr-namespace:Tamasan_Raluca_Lab7">

        <StackLayout Margin="20">
            <Editor Placeholder="Enter the description for your classes list"
                Text="{Binding Description}"
                HeightRequest="50" >
                <Editor.Behaviors>
                    <local:ValidationBehaviour />
                </Editor.Behaviors>
            </Editor>
            <Picker x:Name="ShopPicker" Title="Enter TrainingStudio location"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save"
                    Clicked="OnSaveButtonClicked" />
                <Button Grid.Column="1"
                    Text="Delete"
                    Clicked="OnDeleteButtonClicked"/>
            </Grid>

            <ListView x:Name="listView" Margin="20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Detail="{Binding Description}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Delete selected Class" MaximumWidthRequest="300" Clicked="OnDeleteItemButtonClicked"/>

            <Button Text="Add/Choose Class to join" MaximumWidthRequest="300" Clicked="OnChooseButtonClicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>